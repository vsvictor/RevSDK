<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center_horizontal|center_vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <TextView
            android:text="@string/requests"
            android:textSize="@dimen/big_font"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:id="@+id/rlCircle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:alpha="1">

            <TextView
                android:id="@+id/tvCounter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="0"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/large_font" />

            <ProgressBar
                android:id="@+id/pbRequests"
                style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Large"
                android:layout_width="128dp"
                android:layout_height="128dp"
                android:layout_centerInParent="true" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlStop"
            android:layout_centerHorizontal="true"
            android:background="@drawable/background_empty"
            android:layout_below="@id/rlCircle"
            android:layout_marginTop="@dimen/big"
            android:layout_marginLeft="@dimen/big"
            android:layout_marginRight="@dimen/big"
            android:layout_marginBottom="@dimen/big"
            android:paddingTop="@dimen/small"
            android:paddingBottom="@dimen/small"
            android:paddingLeft="@dimen/big_large"
            android:paddingRight="@dimen/big_large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:text="@string/stop"
                android:textSize="@dimen/big_font"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </RelativeLayout>

        </RelativeLayout>
</LinearLayout>