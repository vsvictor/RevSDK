<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nuubit.racer.fragments.SummaryFragment">

        <LinearLayout
            android:id="@+id/llContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="1.0"
            android:background="@color/colorBackground"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/big"
                        android:layout_marginTop="@dimen/many_large"
                        android:layout_weight="1"
                        android:background="@drawable/background_data_with_left_top">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="@string/summ_title_nuu"
                            android:textStyle="bold" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="@dimen/big"
                        android:layout_marginTop="@dimen/many_large"
                        android:layout_weight="1"
                        android:background="@drawable/background_data_with_right_top">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="@string/summ_title_org"
                            android:textStyle="bold" />
                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llMainFragmentContainer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/big"
                android:layout_marginRight="@dimen/big"
                android:layout_weight="1"
                android:background="@drawable/background_data_without_all"
                android:gravity="center_horizontal|center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal|center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvMin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/min" />

                    <TextView
                        android:id="@+id/tvMinValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/small"
                        android:text="0" />

                    <TextView
                        android:id="@+id/tvMax"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/max" />

                    <TextView
                        android:id="@+id/tvMaxValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/small"
                        android:text="0" />

                    <TextView
                        android:id="@+id/tvAverage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/average" />

                    <TextView
                        android:id="@+id/tvAverageValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/small"
                        android:text="0" />

                    <TextView
                        android:id="@+id/tvMediane"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/small"
                        android:text="@string/mediane" />

                    <TextView
                        android:id="@+id/tvMedianeValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/small"
                        android:text="0" />

                    <TextView
                        android:id="@+id/tvStandDeviation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/small"
                        android:text="@string/stand_deviation" />

                    <TextView
                        android:id="@+id/tvStandDeviationValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/small"
                        android:text="0" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal|center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvMinOrigin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/min" />

                    <TextView
                        android:id="@+id/tvMinOriginValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/small"
                        android:text="0" />

                    <TextView
                        android:id="@+id/tvMaxOrigin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/max" />

                    <TextView
                        android:id="@+id/tvMaxOriginValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/small"
                        android:text="0" />

                    <TextView
                        android:id="@+id/tvAverageOrigin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/average" />

                    <TextView
                        android:id="@+id/tvAverageOriginValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/small"
                        android:text="0" />

                    <TextView
                        android:id="@+id/tvMedianeOrigin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/small"
                        android:text="@string/mediane" />

                    <TextView
                        android:id="@+id/tvMedianeOriginValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/small"
                        android:text="0" />

                    <TextView
                        android:id="@+id/tvStandDeviationOrigin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/small"
                        android:text="@string/stand_deviation" />

                    <TextView
                        android:id="@+id/tvStandDeviationOriginValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/small"
                        android:text="0" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/big"
                    android:layout_marginRight="@dimen/big"
                    android:background="@drawable/background_data_without_top">

                    <TextView
                        android:id="@+id/tvRequests"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/big"
                        android:layout_marginLeft="@dimen/large"
                        android:layout_marginTop="@dimen/big"
                        android:text="@string/mode"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvRequestsValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/big"
                        android:layout_marginLeft="@dimen/small"
                        android:layout_marginTop="@dimen/big"
                        android:layout_toRightOf="@id/tvRequests"
                        android:text="@string/requests"
                        android:textStyle="italic" />

                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

</FrameLayout>
