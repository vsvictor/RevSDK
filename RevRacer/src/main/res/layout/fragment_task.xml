<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.rev.racer.fragments.TaskFragment">

    <LinearLayout
        android:id="@+id/llMainFragmentContainer"
        android:orientation="vertical"
        android:alpha="1.0"
        android:background="@color/colorBackground"
        android:elevation="1dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize">

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center_vertical|center_horizontal">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/tlURL"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/middle"
                    android:layout_marginRight="@dimen/middle"
                    android:layout_marginTop="@dimen/big"
                    android:layout_weight="4"
                    android:background="@drawable/background_empty"
                    android:gravity="center_vertical|center_horizontal"
                    android:textAlignment="center">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/edURL"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/background_empty"
                        android:gravity="top"
                        android:hint="@string/url"
                        android:inputType="textWebEmailAddress"
                        android:maxLines="50"
                        android:paddingLeft="@dimen/middle"
                        android:singleLine="false" />
                </android.support.design.widget.TextInputLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center_vertical|center_horizontal">

                <SeekBar
                    android:id="@+id/sbTests"
                    style="@style/Widget.AppCompat.SeekBar.Discrete"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="10"
                    android:progress="1" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center_vertical|center_horizontal">

                <SeekBar
                    android:id="@+id/sbPayloads"
                    style="@style/Widget.AppCompat.SeekBar.Discrete"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="10"
                    android:progress="1" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center_vertical|center_horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true">

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/tlMethod"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/big"
                        android:layout_marginRight="@dimen/big"
                        android:layout_weight="3"
                        android:background="@drawable/background_empty"
                        android:elevation="1dp"
                        android:gravity="center"
                        android:textAlignment="center">

                        <android.support.v7.widget.AppCompatSpinner
                            android:id="@+id/spMethod"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:entries="@array/method"
                            android:inputType="textWebEditText"
                            android:singleLine="true" />

                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/tlPayload"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/big"
                        android:layout_marginRight="@dimen/big"
                        android:layout_weight="3"
                        android:background="@drawable/background_empty"
                        android:elevation="1dp"
                        android:gravity="center"
                        android:textAlignment="center">

                        <android.support.v7.widget.AppCompatSpinner
                            android:id="@+id/spPayload"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:entries="@array/payloads"
                            android:inputType="textWebEditText"
                            android:singleLine="true" />

                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </RelativeLayout>
    </LinearLayout>
</FrameLayout>
