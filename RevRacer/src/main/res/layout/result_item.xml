<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cvMain"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical|center_horizontal"
    android:gravity="center_vertical|center_horizontal"
    android:orientation="horizontal">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_weight="1.6"
            android:id="@+id/tvSource"
            android:textSize="@dimen/tiny_font"
            android:text="@string/r_source"
            android:paddingLeft="@dimen/middle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:textAppearance="?attr/textAppearanceListItem" />

        <TextView
            android:layout_weight="1.2"
            android:id="@+id/tvStart"
            android:textSize="@dimen/tiny_font"
            android:text="@string/start_ms"
            android:paddingLeft="@dimen/middle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:textAppearance="?attr/textAppearanceListItem" />

        <TextView
            android:layout_weight="1.2"
            android:id="@+id/tvFinish"
            android:textSize="@dimen/tiny_font"
            android:text="@string/finish_ms"
            android:paddingRight="@dimen/small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:textAppearance="?attr/textAppearanceListItem" />

        <TextView
            android:layout_weight="1.5"
            android:id="@+id/tvTime"
            android:textSize="@dimen/small_font"
            android:text="@string/time_ms"
            android:paddingRight="@dimen/small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:textAppearance="?attr/textAppearanceListItem" />

        <TextView
            android:layout_weight="1.5"
            android:id="@+id/tvBody"
            android:textSize="@dimen/small_font"
            android:text="@string/body_kb"
            android:paddingRight="@dimen/small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:textAppearance="?attr/textAppearanceListItem" />

        <TextView
            android:id="@+id/tvPayload"
            android:layout_weight="1.5"
            android:textSize="@dimen/small_font"
            android:text="@string/payload_kb"
            android:paddingRight="@dimen/small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:textAppearance="?attr/textAppearanceListItem" />

    </LinearLayout>
</android.support.v7.widget.CardView>